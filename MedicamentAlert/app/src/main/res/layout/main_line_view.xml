<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <TextView
        android:inputType="text"
        android:maxLength="15"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/main_line_title"
        tools:text="Consulta 1"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Large" />

    <TextView
        android:id="@+id/horario_consulta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop = "8dp"
        android:text="HorÃ¡rio"
        android:layout_alignBottom="@+id/info_consulta"
        android:layout_alignParentStart="true" />

    <ImageButton
        android:id="@+id/excluirConsulta"
        android:layout_width="48dp"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_delete_black_24dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        style="?android:attr/borderlessButtonStyle"/>

    <ImageButton
        android:id="@+id/info_consulta"
        android:layout_width="48dp"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_info_outline_black_24dp"
        style="?android:attr/borderlessButtonStyle"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/excluirConsulta"
        android:layout_toStartOf="@+id/excluirConsulta" />


</RelativeLayout>
