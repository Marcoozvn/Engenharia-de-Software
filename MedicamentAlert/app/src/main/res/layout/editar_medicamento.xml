<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/mytoolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay" />

    </android.support.design.widget.AppBarLayout>



    <ScrollView
        android:id="@+id/ScrollView01"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" >

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#E0E0E0"
            android:padding="16dp"
            tools:context="com.example.marcos.medicamentalert.CadastroMedicamentosActivity"
            android:scrollbars="vertical">

            <Button
                android:id="@+id/salvar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Salvar"
                android:background="@color/colorPrimary"
                android:textColor="#ffffff"
                android:layout_marginEnd="8dp"
                android:elevation="2dp"
                android:layout_marginRight="8dp"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/relativeLayout"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="8dp"
                />

            <RelativeLayout
                android:id="@+id/boxDosagemMedicamento"
                android:layout_width="0dp"
                android:layout_height="120dp"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                android:background="#FAFAFA"
                android:elevation="2dp"
                android:layout_marginLeft="8dp"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginRight="8dp"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/boxHorarioLembrete"
                tools:layout_constraintRight_creator="1"
                tools:layout_constraintLeft_creator="1">

                <FrameLayout
                    android:id="@+id/frameLayoutDosagemMedicamento"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentStart="true"
                    android:background="@drawable/background"
                    android:visibility="visible"
                    android:onClick="editaDosagemMedicamento">

                </FrameLayout>

                <RelativeLayout
                    android:id="@+id/relativeLayoutDosagem"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="16dp"
                    >

                    <TextView
                        android:id="@+id/textView_dosagem"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:paddingBottom="8dp"
                        android:text="Dosagem"
                        android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
                        android:textColor="@color/colorPrimary" />

                    <EditText
                        android:inputType="numberDecimal"
                        android:id="@+id/form_quantidadeDosagem"
                        android:backgroundTint="@color/colorPrimary"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/textView_dosagem"
                        android:hint="Digite a quantidade"
                        android:paddingRight="8dp"
                        android:enabled="false"/>

                    <Spinner
                        android:id="@+id/spinnerDosagem"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBaseline="@id/form_quantidadeDosagem"
                        android:layout_toRightOf="@id/form_quantidadeDosagem">

                    </Spinner>

                </RelativeLayout>


            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/boxNomeMedicamento"
                android:layout_width="0dp"
                android:layout_height="164dp"
                android:layout_marginEnd="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="6dp"
                android:background="#FAFAFA"
                android:elevation="2dp"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:layout_constraintLeft_creator="1"
                tools:layout_constraintRight_creator="1"
                tools:layout_constraintTop_creator="1"
                >

                <FrameLayout
                    android:id="@+id/frameLayoutNomeMedicamento"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentStart="true"
                    android:background="@drawable/background"
                    android:visibility="visible"
                    android:onClick="editaNomeMedicamento">

                </FrameLayout>

                <RelativeLayout
                    android:id="@+id/relativeLayoutNomeMedicamento"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="16dp"
                    >

                    <TextView
                        android:id="@+id/textView_nomeMedicamento"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:paddingBottom="8dp"
                        android:text="Nome do Medicamento"
                        android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
                        android:textColor="@color/colorPrimary" />

                    <EditText
                        android:id="@+id/form_nomeMedicamento"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_below="@+id/textView_nomeMedicamento"
                        android:backgroundTint="@color/colorPrimary"
                        android:hint="Digite o nome do medicamento"
                        android:enabled="false"/>

                    <Button
                        style="?android:attr/borderlessButtonStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_below="@id/form_nomeMedicamento"
                        android:text="Adicionar Consulta"
                        android:textAllCaps="false"
                        android:textColor="@color/colorPrimary"
                        android:id="@+id/button2" />
                </RelativeLayout>
            </RelativeLayout>



            <RelativeLayout
                android:id="@+id/boxHorarioLembrete"
                android:layout_width="0dp"
                android:layout_height="120dp"
                android:layout_marginEnd="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="7dp"
                android:background="#FAFAFA"
                android:elevation="2dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/boxNomeMedicamento"
                tools:layout_constraintLeft_creator="1"
                tools:layout_constraintRight_creator="1">

                <FrameLayout
                    android:id="@+id/frameLayoutHorarioMedicamento"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/background"
                    android:visibility="visible"
                    android:onClick="editaHorarioMedicamento"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentStart="true">

                </FrameLayout>

                <RelativeLayout
                    android:id="@+id/relativeLayoutHorarioLembrete"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:padding="16dp"
                    >

                    <TextView
                        android:id="@+id/textView_horarioLembrete"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingBottom="8dp"
                        android:text="HorÃ¡rio do lembrete"
                        android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
                        android:textColor="@color/colorPrimary" />

                    <Switch
                        android:id="@+id/switch_acionarAlarme"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:thumbTint="@color/colorPrimary"
                        android:trackTint="@color/colorPrimary" />


                    <TextClock
                        android:id="@+id/textClock1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/textView_horarioLembrete"
                        android:paddingBottom="8dp"
                        android:paddingTop="8dp"
                        android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
                        android:textColor="@color/colorPrimary" />

                    <Button
                        android:id="@+id/botaoAdicionaHorario"
                        style="?android:attr/borderlessButtonStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Adicionar horario"
                        android:textColor="@color/colorPrimary"
                        android:textAllCaps="false"
                        android:layout_below="@+id/textView_horarioLembrete"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentBottom="true"/>

                </RelativeLayout>
            </RelativeLayout>


        </android.support.constraint.ConstraintLayout>

    </ScrollView>

</LinearLayout>

